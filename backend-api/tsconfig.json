{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
  },
  "include": ["src/**/*",
        "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}